<div class="max-w-4xl mx-auto p-6">
  <% if notice %>
    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">School Profile</h1>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Details</h2>
    </div>
    <div class="p-6">
      <%= render @school %>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Statistics</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8 text-blue-600">
                <path d="M4.5 6.375a4.125 4.125 0 1 1 8.25 0 4.125 4.125 0 0 1-8.25 0ZM14.25 8.625a3.375 3.375 0 1 1 6.75 0 3.375 3.375 0 0 1-6.75 0ZM1.5 19.125a7.125 7.125 0 0 1 14.25 0v.003l-.001.119a.75.75 0 0 1-.363.63 13.067 13.067 0 0 1-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 0 1-.364-.63l-.001-.122ZM17.25 19.128l-.001.144a2.25 2.25 0 0 1-.233.96 10.088 10.088 0 0 0 5.06-1.01.75.75 0 0 0 .42-.643 4.875 4.875 0 0 0-6.957-4.611 8.586 8.586 0 0 1 1.71 5.157v.003Z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-600">Total Students</p>
              <p class="text-2xl font-semibold text-blue-900"><%= @total_student_count %></p>
            </div>
          </div>
        </div>

        <div class="bg-green-50 rounded-lg p-6 border border-green-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8 text-green-600">
                <path d="M12 11.993a.75.75 0 0 0-.75.75v.006c0 .414.336.75.75.75h.006a.75.75 0 0 0 .75-.75v-.006a.75.75 0 0 0-.75-.75H12ZM12 16.494a.75.75 0 0 0-.75.75v.005c0 .414.335.75.75.75h.005a.75.75 0 0 0 .75-.75v-.005a.75.75 0 0 0-.75-.75H12ZM8.999 17.244a.75.75 0 0 1 .75-.75h.006a.75.75 0 0 1 .75.75v.006a.75.75 0 0 1-.75.75h-.006a.75.75 0 0 1-.75-.75v-.006ZM7.499 16.494a.75.75 0 0 0-.75.75v.005c0 .414.336.75.75.75h.005a.75.75 0 0 0 .75-.75v-.005a.75.75 0 0 0-.75-.75H7.5ZM13.499 14.997a.75.75 0 0 1 .75-.75h.006a.75.75 0 0 1 .75.75v.005a.75.75 0 0 1-.75.75h-.006a.75.75 0 0 1-.75-.75v-.005ZM14.25 16.494a.75.75 0 0 0-.75.75v.006c0 .414.335.75.75.75h.005a.75.75 0 0 0 .75-.75v-.006a.75.75 0 0 0-.75-.75h-.005ZM15.75 14.995a.75.75 0 0 1 .75-.75h.005a.75.75 0 0 1 .75.75v.006a.75.75 0 0 1-.75.75H16.5a.75.75 0 0 1-.75-.75v-.006ZM13.498 12.743a.75.75 0 0 1 .75-.75h2.25a.75.75 0 1 1 0 1.5h-2.25a.75.75 0 0 1-.75-.75ZM6.748 14.993a.75.75 0 0 1 .75-.75h4.5a.75.75 0 0 1 0 1.5h-4.5a.75.75 0 0 1-.75-.75Z"/>
                <path fill-rule="evenodd" d="M18 2.993a.75.75 0 0 0-1.5 0v1.5h-9V2.994a.75.75 0 1 0-1.5 0v1.497h-.752a3 3 0 0 0-3 3v11.252a3 3 0 0 0 3 3h13.5a3 3 0 0 0 3-3V7.492a3 3 0 0 0-3-3H18V2.993ZM3.748 18.743v-7.5a1.5 1.5 0 0 1 1.5-1.5h13.5a1.5 1.5 0 0 1 1.5 1.5v7.5a1.5 1.5 0 0 1-1.5 1.5h-13.5a1.5 1.5 0 0 1-1.5-1.5Z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-green-600">Total Subscriptions</p>
              <p class="text-2xl font-semibold text-green-900">
                <%= @total_subscriptions_count %>
              </p>
            </div>
          </div>
        </div>

        <div class="bg-purple-50 rounded-lg p-6 border border-purple-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8 text-purple-600">
                <path d="M11.25 4.533A9.707 9.707 0 0 0 6 3a9.735 9.735 0 0 0-3.25.555.75.75 0 0 0-.5.707v14.25a.75.75 0 0 0 1 .707A8.237 8.237 0 0 1 6 18.75c1.995 0 3.823.707 5.25 1.886V4.533ZM12.75 20.636A8.214 8.214 0 0 1 18 18.75c.966 0 1.89.166 2.75.47a.75.75 0 0 0 1-.708V4.262a.75.75 0 0 0-.5-.707A9.735 9.735 0 0 0 18 3a9.707 9.707 0 0 0-5.25 1.533v16.103Z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-purple-600">Total Purchased Courses</p>
              <p class="text-2xl font-semibold text-purple-900">
                <%= @total_course_offering_count %>
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
    <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Student Activity by Term Category</h2>
    </div>
    <div class="p-6 overflow-x-auto">
      <table class="min-w-full text-sm text-left text-gray-700">
        <thead>
        <tr>
          <th class="px-4 py-3 font-medium text-gray-600">Term Category</th>
          <th class="px-4 py-3 font-medium text-gray-600">Subscriptions</th>
          <th class="px-4 py-3 font-medium text-gray-600">Paid by CC</th>
          <th class="px-4 py-3 font-medium text-gray-600">Licensed</th>
          <th class="px-4 py-3 font-medium text-gray-600">Course Purchases</th>
          <th class="px-4 py-3 font-medium text-gray-600">Unique Students</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
        <tr>
          <td class="px-4 py-3 font-medium text-gray-800">Past</td>
          <td class="px-4 py-3"><%= @past_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @past_paid_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @past_licensed_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @past_course_offering_count %></td>
          <td class="px-4 py-3"><%= @past_student_count %></td>
        </tr>
        <tr>
          <td class="px-4 py-3 font-medium text-gray-800">Current</td>
          <td class="px-4 py-3"><%= @current_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @current_paid_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @current_licensed_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @current_course_offering_count %></td>
          <td class="px-4 py-3"><%= @current_student_count %></td>
        </tr>
        <tr>
          <td class="px-4 py-3 font-medium text-gray-800">Future</td>
          <td class="px-4 py-3"><%= @upcoming_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @upcoming_paid_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @upcoming_licensed_subscriptions_count %></td>
          <td class="px-4 py-3"><%= @upcoming_course_offering_count %></td>
          <td class="px-4 py-3"><%= @upcoming_student_count %></td>
        </tr>
        <tr class="bg-gray-50 font-semibold">
          <td class="px-4 py-3 text-gray-900">Total</td>
          <td class="px-4 py-3 text-gray-900"><%= @total_subscriptions_count %></td>
          <td class="px-4 py-3 text-gray-900"><%= @total_paid_subscriptions_count %></td>
          <td class="px-4 py-3 text-gray-900"><%= @total_licensed_subscriptions_count %></td>
          <td class="px-4 py-3 text-gray-900"><%= @total_course_offering_count %></td>
          <td class="px-4 py-3 text-gray-900"><%= @total_student_count %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>


  <div class="flex flex-wrap gap-4 items-center justify-between">
    <div class="flex flex-wrap gap-3">
      <%= link_to "Back to Dashboard", dashboard_index_path,
                  class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-md transition-colors duration-200 shadow-sm hover:shadow-md" %>
    </div>
  </div>
</div>
