        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-semibold text-gray-900 truncate"><%= term.name %></h3>
          <p class="text-sm text-gray-600 mt-1"><%= term.school.name %></p>
          <p class="text-md text-gray-700 mt-1"><%= term.subscriptions.count %> Students Enrolled</p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6" data-pagination-type="terms">
  <%= paginate @terms, param_name: :terms_page, params: { term_search: params[:term_search] } %>
</div>
