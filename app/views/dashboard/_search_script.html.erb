<script>
    document.addEventListener('DOMContentLoaded', function () {
        let schoolSearchTimeout;
        let studentSearchTimeout;

        // School search
        const schoolSearch = document.getElementById('schoolSearch');
        const schoolSearchSpinner = document.getElementById('schoolSearchSpinner');
        const schoolsGrid = document.getElementById('schoolsGrid');

        if (schoolSearch) {
            schoolSearch.addEventListener('input', function () {
                clearTimeout(schoolSearchTimeout);
                const query = this.value.trim();

                schoolSearchTimeout = setTimeout(() => {
                    performSearch('schools', query, schoolSearchSpinner, schoolsGrid);
                }, 300);
            });
        }

        // Student search
        const studentSearch = document.getElementById('studentSearch');
        const studentSearchSpinner = document.getElementById('studentSearchSpinner');
        const studentsGrid = document.getElementById('studentsGrid');

        if (studentSearch) {
            studentSearch.addEventListener('input', function () {
                clearTimeout(studentSearchTimeout);
                const query = this.value.trim();

                studentSearchTimeout = setTimeout(() => {
                    performSearch('students', query, studentSearchSpinner, studentsGrid);
                }, 300);
            });
        }

        function performSearch(type, query, spinner, gridContainer, page = null) {
            spinner.classList.remove('hidden');

            const baseUrl = type === 'schools' ? '/dashboard/search_schools_ajax' : '/dashboard/search_students_ajax';
            const url = new URL(baseUrl, window.location.origin);

            if (query) {
                url.searchParams.set(type === 'schools' ? 'school_search' : 'student_search', query);
            }

            if (page) {
                url.searchParams.set(type === 'schools' ? 'schools_page' : 'students_page', page);
            }

            const mainUrl = new URL(window.location.href);
            if (query) {
                mainUrl.searchParams.set(type === 'schools' ? 'school_search' : 'student_search', query);
            } else {
                mainUrl.searchParams.delete(type === 'schools' ? 'school_search' : 'student_search');
            }
            if (page) {
                mainUrl.searchParams.set(type === 'schools' ? 'schools_page' : 'students_page', page);
            }
            window.history.replaceState({}, '', mainUrl);

            fetch(url.href, {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'text/html'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    gridContainer.innerHTML = html;
                    attachPaginationHandlers();
                    spinner.classList.add('hidden');
                })
                .catch(error => {
                    console.error('Search error:', error);
                    spinner.classList.add('hidden');
                    gridContainer.innerHTML = `
                        <div class="text-center py-8">
                          <svg class="size-12 text-red-400 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"/>
                          </svg>
                          <p class="text-red-500">Error loading search results. Please try again.</p>
                        </div>
                      `;
                });
        }

        function attachPaginationHandlers() {
            // School pagination
            const schoolPaginationLinks = document.querySelectorAll('#schoolsGrid ~ .pagination a');
            schoolPaginationLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const url = new URL(this.href);
                    const page = url.searchParams.get('schools_page');
                    const currentSearch = document.getElementById('schoolSearch').value.trim();

                    performSearch('schools', currentSearch, schoolSearchSpinner, schoolsGrid, page);
                });
            });

            // Student pagination
            const studentPaginationLinks = document.querySelectorAll('#studentsGrid ~ .pagination a');
            studentPaginationLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();
                    const url = new URL(this.href);
                    const page = url.searchParams.get('students_page');
                    const currentSearch = document.getElementById('studentSearch').value.trim();

                    performSearch('students', currentSearch, studentSearchSpinner, studentsGrid, page);
                });
            });
        }

        attachPaginationHandlers();
    });
</script>
