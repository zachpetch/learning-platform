<script>
    function initializeSearch() {
        let schoolSearchTimeout;
        let studentSearchTimeout;

        // School search
        const schoolSearch = document.getElementById('schoolSearch');
        const schoolSearchSpinner = document.getElementById('schoolSearchSpinner');
        const schoolsGrid = document.getElementById('schoolsGrid');

        if (schoolSearch) {
            if (schoolSearch.searchHandler) {
                schoolSearch.removeEventListener('input', schoolSearch.searchHandler);
            }

            schoolSearch.searchHandler = function () {
                clearTimeout(schoolSearchTimeout);
                const query = this.value.trim();

                schoolSearchTimeout = setTimeout(() => {
                    performSearch('schools', query, schoolSearchSpinner, schoolsGrid);
                }, 300);
            };

            schoolSearch.addEventListener('input', schoolSearch.searchHandler);
        }

        // Student search
        const studentSearch = document.getElementById('studentSearch');
        const studentSearchSpinner = document.getElementById('studentSearchSpinner');
        const studentsGrid = document.getElementById('studentsGrid');

        if (studentSearch) {
            if (studentSearch.searchHandler) {
                studentSearch.removeEventListener('input', studentSearch.searchHandler);
            }

            studentSearch.searchHandler = function () {
                clearTimeout(studentSearchTimeout);
                const query = this.value.trim();

                studentSearchTimeout = setTimeout(() => {
                    performSearch('students', query, studentSearchSpinner, studentsGrid);
                }, 300);
            };

            studentSearch.addEventListener('input', studentSearch.searchHandler);
        }

        function performSearch(type, query, spinner, gridContainer, page = null) {
            spinner.classList.remove('hidden');

            const baseUrl = type === 'schools' ? '/dashboard/search_schools_ajax' : '/dashboard/search_students_ajax';
            const url = new URL(baseUrl, window.location.origin);

            if (query) {
                url.searchParams.set(type === 'schools' ? 'school_search' : 'student_search', query);
            }

            if (page) {
                url.searchParams.set(type === 'schools' ? 'schools_page' : 'students_page', page);
            }

            fetch(url.href, {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'text/html'
                }
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text();
                })
                .then(html => {
                    gridContainer.innerHTML = html;
                    attachPaginationHandlers();
                    spinner.classList.add('hidden');
                })
                .catch(error => {
                    console.error('Search error:', error);
                    spinner.classList.add('hidden');
                    gridContainer.innerHTML = `
                        <div class="text-center py-8">
                          <svg class="size-12 text-red-400 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"/>
                          </svg>
                          <p class="text-red-500">Error loading search results. Please try again.</p>
                        </div>
                      `;
                });
        }

        function attachPaginationHandlers() {
            document.removeEventListener('click', paginationClickHandler);
            document.addEventListener('click', paginationClickHandler);
        }

        function paginationClickHandler(e) {
            // Check if clicked element is a pagination link within the grids
            const target = e.target.closest('a');
            if (!target) return;

            const schoolsSection = document.getElementById('schoolsGrid');
            const studentsSection = document.getElementById('studentsGrid');

            // Check if this is a schools pagination link
            if (schoolsSection && schoolsSection.parentElement.contains(target)) {
                const url = new URL(target.href);
                const schoolsPage = url.searchParams.get('schools_page');

                if (schoolsPage) {
                    e.preventDefault();
                    const currentSearch = document.getElementById('schoolSearch')?.value.trim() || '';
                    performSearch('schools', currentSearch, schoolSearchSpinner, schoolsGrid, schoolsPage);
                    return;
                }
            }

            // Check if this is a students pagination link
            if (studentsSection && studentsSection.parentElement.contains(target)) {
                const url = new URL(target.href);
                const studentsPage = url.searchParams.get('students_page');

                if (studentsPage) {
                    e.preventDefault();
                    const currentSearch = document.getElementById('studentSearch')?.value.trim() || '';
                    performSearch('students', currentSearch, studentSearchSpinner, studentsGrid, studentsPage);
                    return;
                }
            }
        }

        attachPaginationHandlers();
    }

    function setupInitialization() {
        document.addEventListener('DOMContentLoaded', initializeSearch);
        window.addEventListener('pageshow', initializeSearch);
        window.addEventListener('focus', function () {
            setTimeout(function () {
                const schoolSearch = document.getElementById('schoolSearch');
                const studentSearch = document.getElementById('studentSearch');

                if ((schoolSearch && !schoolSearch.searchHandler) || (studentSearch && !studentSearch.searchHandler)) {
                    initializeSearch();
                }
            }, 100);
        });
    }

    if (document.readyState === 'loading') {
        setupInitialization();
    } else {
        initializeSearch();
        setupInitialization();
    }
</script>
